<h1>Listing micorposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micorposts.each do |micorpost| %>
      <tr>
        <td><%= micorpost.content %></td>
        <td><%= micorpost.user_id %></td>
        <td><%= link_to 'Show', micorpost %></td>
        <td><%= link_to 'Edit', edit_micorpost_path(micorpost) %></td>
        <td><%= link_to 'Destroy', micorpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micorpost', new_micorpost_path %>
